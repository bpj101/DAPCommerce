extends ./layout.pug

block title
	title Main Page

block content
	include ./partials/_jumbotron.pug

	if message.lenght > 0
		.alert.alert-success.alert-dismissible
			button(type="button"
							class="close"
							data-dismiss="alert"
							aria-label="close")
				span(aria-hidden="true") &times;
			#{message}
	
	.container
		.row
			.col-md-4
				h3 Start your search here
				P Signup to state Buying
			.col-md-4
				h3 Look for Smart items?
				p These will appear across the site as you add to your cart
			.col-md-4
				h3 Build a smart cart
				p The more smarrt items you buy together, the more you save :)
