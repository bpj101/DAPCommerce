extends ../layout.pug

block title
	title Edit Profile

block content
	.container
		.row
			.col-lg-6.col-md-offset-3
				if (message.length > 0)
					.alert.alert-success.alert-dismissible
						button(type="button" class="close" data-dismiss="alert" aria-label="close")
							span(aria-hidden="true") &times;
						p #{message}
				form(method="post")
					h1 Edit Profile
					.form-group
						label Name:
						input(type="name"
									name="name"
									class="form-control"
									value=user.profile.name)
					.form-group
						label Address:
						input(type="address"
									name="address"
									class="form-control"
									value=user.address)
					button(type="submit" class="btn btn-success") Submit
