extends ../layout.pug

block title
	title Signup

block content
	.row
		.col-lg-6.col-md-offset-3
			if (errors.lenght > 0)
				.alert.alert-success.alert-dismissible
					button(type="button"
									class="close"
									data-dismiss="alert"
									aria-label="close")
						span(aria-hidden="true") &times;
					#{errors}
			form(method="post")
				h1 Signup
				.form-group
					label Name:
					input(type="name"
								name="name"
								class="form-control")
				.form-group
					label Email:
					input(type="email"
								name="email"
								class="form-control")
				.form-group
					label Password:
					input(type="password"
								name="password"
								class="form-control")
				button(type="submit" class="btn btn-success") Submit
