extends ../layout.pug

block title
	title Category Admin

block content
	.row
		.col-lg-6.col-md-offset-3
			if (message.length > 0)
				.alert.alert-success.alert-dismissible
					button(type="button"
									class="close"
									data-dismiss="alert"
									aria-label="close")
						span(aria-hidden="true") &times;
					p #{message}
			form(method="post")
				h1 Add New Category
				.form-group
					label Name:
					input(type="name"
								name="name"
								class="form-control")
				button(type="submit" class="btn btn-success") Submit
